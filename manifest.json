{
    "manifest_version": 3,
    "name": "Scribe - Screen Capture",
    "version": "1.0.0",
    "description": "Capture visible tab window on each click and store screenshots locally",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        },
        "default_title": "Scribe - View Captures"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}